{
  "version": "0.1.0-beta",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "ignoreChanges": ["ignored-file", "**/*.md"],
  "command": {
    "version": {
      "allowBranch": ["master", "next", "create-release-process"],
      "conventionalCommits": true,
      "noPrivate": true,
      "createRelease": "github",
      "message": "chore(release): publish %s [skip ci]",
      "loglevel": "verbose",
      "yes": true
    },
    "publish": {
      "verifyAccess": false,
      "preDistTag": "next",
      "loglevel": "verbose",
      "yes": true
    }
  }
}
