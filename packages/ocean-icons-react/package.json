{
  "name": "@useblu/ocean-icons-react",
  "version": "0.1.0-beta",
  "description": "React component for Ocean icons",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "icons",
    "svg",
    "ocean design"
  ],
  "scripts": {
    "gen": "ts-node -P scripts/tsconfig.build.json --files scripts/createIcons.ts",
    "prebuild": "rimraf dist",
    "build": "rollup -c rollup.config.ts",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:fix": "eslint '**/*.{ts,tsx}' --fix"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@svgr/core": "^5.5.0",
    "@svgr/plugin-prettier": "^5.5.0",
    "@svgr/plugin-svgo": "^5.5.0",
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.2",
    "@types/rollup-plugin-peer-deps-external": "^2.2.0",
    "@useblu/ocean-icons": "^0.1.0-beta",
    "eslint-plugin-react": "^7.22.0",
    "react": "^17.0.1",
    "rollup": "^2.39.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-node": "^9.1.1"
  },
  "peerDependencies": {
    "react": ">=16.13.0"
  },
  "repository": "git@github.com:Pagnet/ocean-icons.git",
